{
  "dashboard": {
    "title": "AI 批改系统 - 架构深度融合监控",
    "tags": ["grading-system", "architecture-integration"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "连接池状态",
        "type": "graph",
        "targets": [
          {
            "expr": "pool_connections_active{pool_type=\"postgresql\"}",
            "legendFormat": "PostgreSQL Active"
          },
          {
            "expr": "pool_connections_idle{pool_type=\"postgresql\"}",
            "legendFormat": "PostgreSQL Idle"
          },
          {
            "expr": "pool_connections_active{pool_type=\"redis\"}",
            "legendFormat": "Redis Active"
          }
        ]
      },
      {
        "id": 2,
        "title": "缓存命中率",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m]) / rate(cache_requests_total[5m])",
            "legendFormat": "Hit Rate"
          }
        ]
      },
      {
        "id": 3,
        "title": "追踪跨度持续时间 (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(trace_span_duration_ms_bucket[5m]))",
            "legendFormat": "{{span_kind}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Saga 事务状态",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(saga_transactions_completed_total{status=\"success\"}[5m])",
            "legendFormat": "Success"
          },
          {
            "expr": "rate(saga_transactions_failed_total[5m])",
            "legendFormat": "Failed"
          },
          {
            "expr": "rate(saga_compensations_total[5m])",
            "legendFormat": "Compensations"
          }
        ]
      },
      {
        "id": 5,
        "title": "检查点大小分布",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(checkpoint_data_size_bytes_bucket[5m]))",
            "legendFormat": "P95 Size"
          }
        ]
      },
      {
        "id": 6,
        "title": "分布式锁等待时间",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(distributed_lock_wait_time_seconds_bucket[5m]))",
            "legendFormat": "{{resource_type}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "API 慢查询",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(api_slow_queries_total[5m])",
            "legendFormat": "{{endpoint}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "WebSocket 连接数",
        "type": "graph",
        "targets": [
          {
            "expr": "websocket_connections_active",
            "legendFormat": "Active Connections"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
